{
  "name": "minecord-ts",
  "version": "0.0.26",
  "description": "Connects Discord and Minecraft Servers without any mods or plugins.",
  "main": "./lib/index.js",
  "module": "src/index.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "minecord": "./dist/index.js"
  },
  "engines": {
    "node": "^18.13"
  },
  "scripts": {
    "dist": "rm -rf ./dist && yarn build && cp -a ./src/config.json ./dist/config.json && cp -a ./entrypoint/* ./dist",
    "build": "babel src --extensions '.ts' --out-dir dist",
    "lint": "eslint --ext .ts,.js --ignore-path .gitignore . --fix",
    "start": "nodemon dist/index.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shztmk/minecord-ts.git"
  },
  "keywords": [
    "Discord",
    "Minecraft"
  ],
  "author": "moriyama@node-link.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shztmk/minecord-ts"
  },
  "homepage": "https://github.com/shztmk/minecord-ts#readme",
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/chokidar": "^2.1.3",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.59.1",
    "babel-minify": "^0.5.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-preset-minify": "^0.5.2",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "chokidar": "^3.5.3",
    "commander": "^9.5.0",
    "consola": "^2.15.3",
    "discord.js": "^14.7.1",
    "iconv-lite": "^0.6.3",
    "nodemon": "^2.0.20",
    "rcon-ts": "^1.2.3"
  },
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json"
    }
  },
  "testMatch": [
    "/tests/**/*.test.ts"
  ]
}
