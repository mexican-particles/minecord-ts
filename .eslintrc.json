{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": ["prettier"],
  "plugins": ["prettier", "import", "@typescript-eslint"],
  "rules": {
    "sort-imports": 0,
    "import/order": [
      2, {
        "alphabetize": {
          "order": "asc"
        }
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts"]
      }
    }
  },
  "ignorePatterns": ["dist/", "node_modules/"]
}
